#!/bin/sh -x

function start() {
    mongrel_rails start --address 127.0.0.1 &
    echo $! > mongrel.pid
}

function stop() {
    mongrel_rails stop --pid mongrel.pid
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        stop
        sleep 2
        start
        ;;
esac