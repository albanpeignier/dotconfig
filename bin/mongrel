#!/bin/sh -x

# Start/stop/restart your mongrel development instance.
#
# Examples:
#  mongrel restart
#  mongrel stop
#  mongrel start

function start() {
    mongrel_rails start &
    echo $! > mongrel.pid
}

function stop() {
    mongrel_rails stop --pid mongrel.pid
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        stop
        sleep 2
        start
        ;;
esac