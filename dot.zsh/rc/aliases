if [ -z "$NO_COLORS" ]; then
	alias ls='command ls --color'
fi

alias ll='ls -l'
alias lrt='ls -rt'
alias h='history'
alias myps='ps -u $USER'
alias n='nautilus'
alias ifconfig='/sbin/ifconfig'
alias iwconfig='/sbin/iwconfig'
alias g='ack-grep --type-add ruby=.erb'
alias f='~/share/bin/find-wrapper'

alias mute='amixer -q sset Master playback mute'
alias unmute='amixer -q sset Master playback unmute'